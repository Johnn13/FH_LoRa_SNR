<?xml version="1.0"?>
<block>
  <name>LoRa Decoder</name>
  <key>lora_decode</key>
  <category>[lora]</category>
  <import>import lora</import>
  <make>lora.decode($spreading_factor, $code_rate, $low_data_rate, $crc, $payload_len, $header)</make>

  <param>
    <name>Spreading Factor</name>
    <key>spreading_factor</key>
    <value>8</value>
    <type>int</type>
  </param>
  <param>
    <name>Low Data Rate</name>
    <key>low_data_rate</key>
    <value>False</value>
    <type>bool</type>
  </param>
  <param>
    <name>Header Mode</name>
    <key>header</key>
    <type>enum</type>
    <option>
      <name>Explicit</name>
      <key>True</key>
      <opt>hide_header:all</opt>
    </option>
    <option>
      <name>Implicit</name>
      <key>False</key>
      <opt>hide_header:</opt>
    </option>
  </param>
  <param>
    <name>CRC</name>
    <key>crc</key>
    <type>enum</type>
    <hide>$header.hide_header</hide>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Code Rate</name>
    <key>code_rate</key>
    <type>enum</type>
    <hide>$header.hide_header</hide>
    <option>
      <name>4/8</name>
      <key>4</key>
    </option>
    <option>
      <name>4/7</name>
      <key>3</key>
    </option>
    <option>
      <name>4/6</name>
      <key>2</key>
    </option>
    <option>
      <name>4/5</name>
      <key>1</key>
    </option>
  </param>
  <param>
    <name>Payload Length</name>
    <key>payload_len</key>
    <value>4</value>
    <type>int</type>
    <hide>$header.hide_header</hide>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>
  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
